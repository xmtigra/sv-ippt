<a href="/payments" class="focus-ring py-1 px-2 text-decoration-none border rounded-2">Back</a>

<div class="row">
    <div class="col-md"></div>
    <div class="col-md">
        <h1><%= title %></h1>
        <form action="" method="post">

            <div class="mb-3">
                <label for="reservation_id" class="form-label">Reservation ID:</label>
                <select class="form-select" id="reservation_id" name="reservation_id" required>
                    <option value="" disabled selected>Select a reservation</option>
                    <% items.forEach(function(item) { %>
                        <option value="<%= item.reservation_id %>"
                                <%= reservation_id == item.reservation_id ? 'selected' : '' %>
                        >
                            <%= item.reservation_id %> -
                            (<%= new Intl.DateTimeFormat('en-GB', {
                                year: 'numeric',
                                month: 'long',
                                day: '2-digit'
                            }).format(new Date(item.check_in_date)) %> -
                            <%= new Intl.DateTimeFormat('en-GB', {
                                year: 'numeric',
                                month: 'long',
                                day: '2-digit'
                            }).format(new Date(item.check_out_date)) %>)
                        </option>
                    <% }); %>
                </select>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <div class="form-floating">
                    <input type="number" class="form-control" id="amount" name="amount" required>
                    <label for="amount">Amount:</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    <div class="col-md"></div>
</div>
