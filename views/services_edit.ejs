<div class="row">
    <div class="col-md">
        <a href="/services" class="focus-ring py-1 px-2 text-decoration-none border rounded-2">Back</a>
    </div>
    <div class="col-md">
        <h1><%= title %></h1>
        <form action="" method="post">
            <div class="mb-3">
                <label for="service_name" class="form-label">Name:</label>
                <input type="text" class="form-control" id="service_name" name="service_name" value="<%= item.service_name %>" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea class="form-control" id="description" rows="3" name="description" required><%= item.description %></textarea>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <div class="form-floating">
                    <input  type="number" class="form-control" id="price" name="price" value="<%= item.price %>" required>
                    <label for="price">Price:</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    <div class="col-md"></div>
</div>