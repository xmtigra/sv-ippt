<a href="/rooms" class="focus-ring py-1 px-2 text-decoration-none border rounded-2">Back</a>

<div class="row">
    <div class="col-md"></div>
    <div class="col-md">
        <h1><%= title %></h1>
        <form action="" method="post">
            <div class="mb-3">
                <label for="number" class="form-label">Number:</label>
                <input type="number" class="form-control" id="number" name="room_number" required min="100" value="<%= item.room_number %>">
            </div>

            <div class="mb-3">
                <label for="type" class="form-label">Type:</label>
                <select class="form-select" id="type" name="room_type" required>
                    <option value="" disabled selected>Select Type</option>
                    <option value="Standard" <%= item.room_type === 'Standard' ? 'selected' : '' %>>Standard</option>
                    <option value="Deluxe" <%= item.room_type === 'Deluxe' ? 'selected' : '' %>>Deluxe</option>
                    <option value="Suite" <%= item.room_type === 'Suite' ? 'selected' : '' %>>Suite</option>
                </select>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <div class="form-floating">
                    <input type="number" class="form-control" id="price" name="price" required value="<%= item.price %>">
                    <label for="price">Price:</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    <div class="col-md"></div>
</div>
